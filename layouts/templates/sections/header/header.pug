block navbarConfig
  - var navbarPosition = "navbar-fixed-top"
  - var navbarColor = "navbar-semi-dark"
  - var navbarShadow = true

// navbar-fixed-top
nav.header-navbar.navbar.navbar-with-menu(class=navbarPosition + " " + navbarColor, 
class=(navbarHideOnScroll == true ? 'navbar-hide-on-scroll' : ''), 
class=(navbarBorder == true ? 'navbar-border' : ''), 
class=(navbarShadow == true ? 'navbar-shadow' : ''), 
class=(navbarBrandCenter == true ? 'navbar-brand-center' : ''), 
class=(boxedLayout == true ? 'container boxed-layout' : ''))
  .navbar-wrapper
    .navbar-header
      ul.nav.navbar-nav
        li.nav-item.mobile-menu.hidden-md-up.float-xs-left
          a.nav-link.nav-menu-main.menu-toggle.hidden-xs(href='#')
              i.ft-menu.font-large-1
        li.nav-item
          a.navbar-brand(href='/')
            //- img(class='brand-logo' alt='' src=(logoType == 'dark' ? '../../../app-assets/images/logo/stack-logo.png' : '../../../app-assets/images/logo/eventor-logo-light.png'))
            h2.brand-text(style="padding-left:5px") Hacettepe
        li.nav-item.hidden-md-up.float-xs-right
          a.nav-link.open-navbar-container(data-toggle='collapse', data-target='#navbar-mobile')
            i.fa.fa-ellipsis-v
    .navbar-container(class= (centerLayout == true ? 'container center-layout' : 'content container-fluid'))
      #navbar-mobile.collapse.navbar-toggleable-sm
        ul.nav.navbar-nav
          li.nav-item.hidden-sm-down
            a.nav-link.nav-menu-main.menu-toggle.hidden-xs(href='#')
              i.ft-menu
        ul.nav.navbar-nav
          li.nav-item
            a.nav-link #{pageTitle}
        ul.nav.navbar-nav.float-xs-right
          - var totalNotifications  = 0 
          - var totalTextNotify = totalNotifications > 0 ? totalNotifications +  ' New' : 'No Notifications'
          li.dropdown.dropdown-user.nav-item
            a.dropdown-toggle.nav-link.dropdown-user-link(href='#', data-toggle='dropdown')
              span.avatar.avatar-online
                img(src='../../../app-assets/images/portrait/small/avatar-s-1.png', alt='avatar')
                i
              span.user-name=_UserDisplayName
            .dropdown-menu.dropdown-menu-right
              a.dropdown-item(href='/secure/logout')
                i.ft-power
                |  Çıkış