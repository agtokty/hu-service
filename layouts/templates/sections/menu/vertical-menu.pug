block verticalMenuConfig
	- var menuType = "menu-fixed"
	- var menuColor = "menu-dark"
	- var menuOpenType = "menu-accordion"
	- var menuShadow = true

.main-menu(class=menuType + ' ' + menuColor + ' ' +  menuOpenType, 
class=(menuNativeScroll == true ? 'menu-native-scroll' : ''), 
class=(menuIconRight == true ? 'menu-icon-right' : ''), 
class=(menuBorder == true ? 'menu-bordered' : ''), 
class=(menuShadow == true ? 'menu-shadow' : ''), 
class=(menuBorder == true ? 'menu-border' : '') 
data-scroll-to-active="true")
	.main-menu-content
		- if(_UserDisplayName == "admin")
			+verticalMenu([
				{ url:"/",name:"Durak Seç",slug:"/",icon:"ft-map-pin", tagcustom: "tag tag-primary tag-pill float-xs-right mr-2"},
				{url:"/routes",name:"Rotalar",slug:"/routes",icon:"ft-navigation", tagcustom: "tag tag-primary tag-pill float-xs-right mr-2"},
				{url:"#",name:"Araçlar",slug:"tools",icon:"ft-grid", tagcustom: "tag tag-primary tag-pill float-xs-right mr-2",
					submenu:[
						{url:"/tools/osrm",name:"OSRM ile Rota Bul",slug:"/tools/osrm",icon:"fa-location-arrow", tagcustom: "tag tag-primary tag-pill float-xs-right mr-2"},
						{url:"/tools/generate-weight",name:"Test Verisi Üret",slug:"/tools/generate-weight",icon:"ft-clock", tagcustom: "tag tag-primary tag-pill float-xs-right mr-2"},
					]
				},
			])
		- else
			+verticalMenu([
				{ url:"/",name:"Durak Seç",slug:"/",icon:"ft-map-pin", tagcustom: "tag tag-primary tag-pill float-xs-right mr-2"},
				{url:"/routes",name:"Rotalar",slug:"/routes",icon:"ft-navigation", tagcustom: "tag tag-primary tag-pill float-xs-right mr-2"}
    		])
