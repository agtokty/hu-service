extends ./map_base

block content
	script#delete1.
		var savedData_saved = #{saved};
	- if (saved == true)
		script#delete.
			var savedData_lat = #{savedData.lat};
			var savedData_lon = #{savedData.lon};
			var savedData_note = "#{savedData.note}";
			
	.col-md-12.pad-r-l-0
		block map_left_panel
			include ./include/search
		block map_righ_panel
			#floating-panel-right
				.input-group.input-group-sm.p-t-5
					span.input-group-btn(title="Başlangıç noktası seç")
						button.btn.btn-primary.start-stop-btn(type='button' selectFor="start" title="Toplam Ağırlık") Toplam
					//- input.form-control#total-weight.start-stop(type="number" value="1500" selectFor="start")
					select.form-control#total-weight(name="total-weight")
						option(value="500") 500
						option(value="700") 700
						option(value="900") 900
						option(value="1000") 1000
						option(value="1200") 1200
						option(value="1300") 1300
						option(value="1400") 1400
						option(value="1500") 1500
				.input-group.input-group-sm.p-t-5
					label
						input#use-master(type="checkbox" checked)
						| Güncel Durakları Kullan				
				.input-group.input-group-sm.p-t-5
					.input-group-btn(title="Bitiş noktası seç")
						button.btn.btn-danger.start-stop-btn(type='button' selectFor="stop" title="Durak Sayısı") #Durak
					input.form-control#station-count.start-stop(type="number" value="200" step="10" selectFor="stop" disabled)
				hr
				#route-result
				div#control-buttons
					button.btn.btn-info.btn-sm.mr-1#start-process(type="clear") Başlat
					button.btn.btn-warning.btn-sm#clear-data-process(type="clear") Durak Birleştir**
		#map.map

