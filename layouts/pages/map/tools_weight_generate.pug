extends ./map_base

block content
	script#delete1.
		var savedData_saved = #{saved};
	- if (saved == true)
		script#delete.
			var savedData_lat = #{savedData.lat};
			var savedData_lon = #{savedData.lon};
			var savedData_note = "#{savedData.note}";
			
	.col-md-12.pad-r-l-0
		block map_left_panel
			include ./include/search
		block map_righ_panel
			#floating-panel-right
				.input-group.input-group-sm.p-t-5
					span.input-group-btn(title="Başlangıç noktası seç")
						button.btn.btn-primary.start-stop-btn(type='button' selectFor="start") Toplam Ağırlık
					input.form-control#total-weight.start-stop(type="number" value="1500" selectFor="start")
				.input-group.input-group-sm.p-t-5
					.input-group-btn(title="Bitiş noktası seç")
						button.btn.btn-danger.start-stop-btn(type='button' selectFor="stop") Durak Sayısı
					input.form-control#station-count.start-stop(type="number" value="500"  selectFor="stop")
				hr
				#route-result
				button.btn.btn-info#start-process(type="clear") Başlat
		#map.map

